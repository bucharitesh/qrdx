# Database
# PostgreSQL connection string (e.g., from Neon, Supabase, or local)
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Authentication - GitHub OAuth
# Create a GitHub OAuth app at https://github.com/settings/developers
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Better Auth
# Base URL for the application (use http://localhost:3000 for local development)
BASE_URL=http://localhost:3000

# Better Auth Secret (generate a random string for session encryption)
# You can generate one using: openssl rand -base64 32
BETTER_AUTH_SECRET=your_random_secret_key_here

# GitHub API
# Personal access token for GitHub API access (optional, for enhanced features)
# Create one at https://github.com/settings/tokens
GITHUB_TOKEN=your_github_personal_access_token

# Development Tools
# Enable bundle analyzer (optional)
ANALYZE=false